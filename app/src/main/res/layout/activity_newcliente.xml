<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newcliente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#bfc9ca"
    tools:context=".MainActivity"
    >


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/marca3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15sp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/fondo_marca"
        android:fontFamily="serif"
        android:padding="40sp"
        android:text="DANARA"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lblTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20sp"
        android:layout_marginTop="4dp"
        android:background="@drawable/round_borders_bottom_black"
        android:paddingVertical="20sp"
        android:text="NUEVO ClIENTE"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints,RtlSymmetry" />



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lblIdPersona"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="30sp"
        android:text="ID Persona:"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTitulo" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/inputIdPersona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/round_borders"
        android:hint="Ingresar ID Persona"
        android:padding="05sp"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/lblIdPersona" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lblDireccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:layout_marginTop="47sp"
        android:text="Direcciòn:"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblIdPersona" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/inputDireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/round_borders"
        android:hint="Ingresar Direcciòn"
        android:padding="05sp"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@+id/lblDireccion" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:background="#0000FF"
        android:paddingHorizontal="50sp"
        android:text="GUARDAR"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputDireccion" />



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lstproducto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#bfc9ca">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lblTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20sp"
        android:layout_marginTop="4dp"
        android:text="LISTA DE PRODUCTOS"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingVertical="20sp"
        android:textAlignment="center"
        android:background="@drawable/round_borders_bottom_black"
        tools:ignore="MissingConstraints,RtlSymmetry" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNewProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="NUEVO PRODUCTO"
        app:layout_constraintTop_toBottomOf="@+id/lblTitulo"
        android:layout_margin="20sp"
        android:background="#FF0000"
        android:paddingHorizontal="20sp"
        android:textColor="@color/white"
        />

    <TableLayout
        android:id="@+id/lstProducto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnNewProducto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20sp"
        android:gravity="center">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="02sp"
                android:background="#6699FF"
                android:gravity="center"
                android:paddingHorizontal="44sp"
                android:text="Nombre"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="02sp"
                android:paddingHorizontal="44sp"
                android:background="#6699FF"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Precio"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Stock"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingHorizontal="44sp"
                android:layout_marginHorizontal="02sp"
                android:background="#6699FF"
                android:textColor="@color/black"/>
        </TableRow>
    </TableLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DANARA"
        android:layout_marginHorizontal="15sp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:textSize="13sp"
        android:padding="40sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/fondo_marca"
        />

</androidx.constraintlayout.widget.ConstraintLayout>